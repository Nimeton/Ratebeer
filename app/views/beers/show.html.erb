<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @beer.name %>
</p>

<p>
  <b>Style:</b>
  <%= @beer.style %>
</p>

<p>
  <b>Brewery:</b>
  <%= Brewery.find(@beer.brewery_id).name %>
</p>

<% if @beer.ratings.empty? %>
 <p>beer has not yet been rated!</p>
<% else %>
 <p>beer has <%= pluralize(@beer.ratings.count, 'rating') %> , average <%= @beer.average_rating %> </p>
<% end %>

<%= link_to 'Edit', edit_beer_path(@beer) %> |
<%= link_to 'Back', beers_path %>
