<h1>Listing beers</h1>

<% cache("beers-#{@order}") do %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th> <%= link_to 'Name', beers_path(:order => "name") %> </th>
        <th> <%= link_to 'Style', beers_path(:order => "style") %> </th>
        <th> <%= link_to 'Brewery', beers_path(:order => "brewery") %> </th>
      </tr>
    </thead>
    <tbody>
      <% @beers.each do |beer| %>
        <% br = Brewery.find beer.brewery_id %>
        <tr>
          <td><%= link_to beer.name, beer %></td>
          <td><%= beer.style.name %></td>
          <td><%= link_to br.name, br %></td>
        </tr>
      <% end %>
  </tbody>
  </table>

  <br />

<% end %>

<%= link_to('New Beer', new_beer_path, class:"btn btn-primary") if current_user %>

<%= link_to 'List of breweries', breweries_path, class:"btn btn-success" %>