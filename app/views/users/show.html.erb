<p id="notice"><%= notice %></p>

<h2>
  <%= @user.username %>
</h2>

<% if @user.ratings.empty? %>
  <p>no ratings given</p>
<% else %>
  <p>
    has given <%= @user.ratings.count %> ratings, average <%= @user.average_rating %>
  </p>

  <ul>
    <% @user.ratings.each do |rating| %>
      <li>
        <%= rating %> 
      <% if currently_signed_in? @user %>
          <%= link_to 'delete', rating, :method => :delete, :data => { :confirm => 'Are you sure?' } %> 
      <% end %>
      </li>
    <% end %>
  </ul>

<% end %>

<% if @user.beer_clubs.empty? %>
  <p>No memberships</p>
<% else %>
  <h3>Memberships: </h3>
  <ul>
    <% @user.beer_clubs.each do |club| %>
      <li>
        <%= link_to club.name , club %>
      </li>
    <% end %>
  </ul>

<% end %>

<% favostyle = @user.favorite_style %>
<% unless favostyle.nil? %>
  <p>Favorite style: <%= favostyle %></p>
<% end %>

<% favobrewery = @user.favorite_brewery %>
<% unless favobrewery.nil? %>
  <p>Favorite brewery: <%= favobrewery.name %></p>
<% end %>


<% if currently_signed_in? @user %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
